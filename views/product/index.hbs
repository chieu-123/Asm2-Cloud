<a class="btn btn-info" href="/product/add">Add new product</a>
<a class="btn btn-primary" href="/product/sort/asc">Sort ASC</a>
<a class="btn btn-secondary" href="/product/sort/desc">Sort DESC</a>
<br><br>
<form class="col-md-4" action="/product/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search">
</form>
<br><br>
<table border="1" class="table table-primary">
   <tr>
      <th>Product Name</th>
      <th>Product Description</th>
      <th>Product Price</th>
      <th>Product Brand</th>
      <th>Product Category</th>
      <th>Product image</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each products }}
   <tr>
      <td>{{ productname }}</td>
      <td>{{ description }}</td>
      <td>{{ price }}</td>
      <td>{{ brand.brandname }}</td>
      <td>{{ category.categoryname }}</td>
      <td>
         <img src="{{ image }}" alt="" width="100" height="120">
      </td>
      <td>
         <a class="btn btn-warning" href="/product/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/product/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this product ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>